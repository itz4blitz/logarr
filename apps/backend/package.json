{
  "name": "@logarr/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Logarr NestJS backend API",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@logarr/core": "workspace:*",
    "@logarr/provider-arr": "workspace:*",
    "@logarr/provider-emby": "workspace:*",
    "@logarr/provider-jellyfin": "workspace:*",
    "@logarr/provider-plex": "workspace:*",
    "@logarr/provider-prowlarr": "workspace:*",
    "@logarr/provider-radarr": "workspace:*",
    "@logarr/provider-sonarr": "workspace:*",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/platform-socket.io": "^11.1.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.0",
    "drizzle-orm": "^0.38.3",
    "ioredis": "^5.8.2",
    "nestjs-pino": "^4.5.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.11",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.30.1",
    "supertest": "^7.1.4",
    "typescript": "^5.7.2",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.16"
  }
}
