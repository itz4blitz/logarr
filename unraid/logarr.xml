<?xml version="1.0"?>
<Container version="2">
  <Name>Logarr</Name>
  <Repository>ghcr.io/itz4blitz/logarr-backend</Repository>
  <Registry>https://github.com/itz4blitz/logarr/pkgs/container/logarr-backend</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/itz4blitz/logarr/issues</Support>
  <Project>https://github.com/itz4blitz/logarr</Project>
  <Overview>
    Logarr is an AI-powered logging and diagnostics platform for your media server stack.

    Features:
    - Aggregate logs from Jellyfin, Sonarr, Radarr, and Prowlarr
    - Auto-detect and rank errors by severity and impact
    - AI-powered root cause analysis (optional, BYO API key)
    - Real-time log streaming with search and filters
    - Session tracking for media playback

    This container runs the Logarr backend. You will also need:
    - PostgreSQL database
    - Redis for caching
    - Logarr Frontend container

    See the GitHub repository for full docker-compose setup.
  </Overview>
  <Category>Tools: MediaServer:Other Status:Beta</Category>
  <WebUI>http://[IP]:[PORT:3001]/</WebUI>
  <Icon>https://raw.githubusercontent.com/itz4blitz/logarr/main/apps/frontend/public/icon.png</Icon>
  <ExtraParams>--restart unless-stopped</ExtraParams>
  <DateInstalled></DateInstalled>
  <Description>AI-powered logging and diagnostics for media servers. Aggregates logs from Jellyfin, Sonarr, Radarr, and Prowlarr with intelligent issue detection.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>4001</HostPort>
        <ContainerPort>4001</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/logarr</HostDir>
      <ContainerDir>/app/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>postgresql://logarr:logarr@localhost:5432/logarr</Value>
      <Name>DATABASE_URL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>redis://localhost:6379</Value>
      <Name>REDIS_URL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>your-secret-key-change-me</Value>
      <Name>JWT_SECRET</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>4001</Value>
      <Name>PORT</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>ANTHROPIC_API_KEY</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>OPENAI_API_KEY</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>GEMINI_API_KEY</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Config Name="Backend Port" Target="4001" Default="4001" Mode="tcp" Description="Port for the Logarr backend API" Type="Port" Display="always" Required="true" Mask="false">4001</Config>
  <Config Name="Data Path" Target="/app/data" Default="/mnt/user/appdata/logarr" Mode="rw" Description="Path to store Logarr data" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/logarr</Config>
  <Config Name="Database URL" Target="DATABASE_URL" Default="postgresql://logarr:logarr@localhost:5432/logarr" Mode="" Description="PostgreSQL connection string" Type="Variable" Display="always" Required="true" Mask="false">postgresql://logarr:logarr@localhost:5432/logarr</Config>
  <Config Name="Redis URL" Target="REDIS_URL" Default="redis://localhost:6379" Mode="" Description="Redis connection string for caching" Type="Variable" Display="always" Required="true" Mask="false">redis://localhost:6379</Config>
  <Config Name="JWT Secret" Target="JWT_SECRET" Default="" Mode="" Description="Secret key for JWT tokens (generate a random string)" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="Anthropic API Key" Target="ANTHROPIC_API_KEY" Default="" Mode="" Description="Optional: API key for Claude AI analysis" Type="Variable" Display="advanced" Required="false" Mask="true"></Config>
  <Config Name="OpenAI API Key" Target="OPENAI_API_KEY" Default="" Mode="" Description="Optional: API key for OpenAI analysis" Type="Variable" Display="advanced" Required="false" Mask="true"></Config>
  <Config Name="Gemini API Key" Target="GEMINI_API_KEY" Default="" Mode="" Description="Optional: API key for Google Gemini analysis" Type="Variable" Display="advanced" Required="false" Mask="true"></Config>
</Container>
